@using Student_Performance_Management_System.ViewModel;
@model StudentViewModel
@{
    Layout = "_StaffLayout";
}
<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            <div class="card shadow-sm border-0 rounded-3">
                <!-- HEADER -->
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-person-gear me-2"></i>Edit Profile</h5>
                </div>

                <div class="card-body p-4">
                    <!-- ALERT -->
                    <div class="alert alert-info border-0 shadow-sm small mb-4">
                        <i class="bi bi-info-circle me-2"></i>PRN and Email are fixed for security reasons.
                    </div>

                    <!-- FORM: POST method aur Tag Helpers ka use karein -->
                    <form asp-controller="Student" asp-action="AfterEditProfile" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Read Only Fields -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted">PRN (Read Only)</label>
                            <input asp-for="PRN" class="form-control bg-light" readonly>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Full Name *</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter your full name">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted">Email (Read Only)</label>
                            <input asp-for="Email" class="form-control bg-light" readonly>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Mobile Number *</label>
                            <input asp-for="MobileNo" class="form-control" placeholder="10-digit mobile number">
                            <span asp-validation-for="MobileNo" class="text-danger small"></span>
                        </div>

                        <hr class="my-4">
                        <a asp-controller="Student" asp-action="ChangePassword" class="btn btn-light px-4 border">
                            Change Password
                        </a>
                        <!-- BUTTONS -->
                        <div class="d-flex justify-content-end gap-2 mt-5">
                            <a asp-controller="Student" asp-action="Dashboard" class="btn btn-light px-4 border">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4 shadow-sm">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* Client-side validation ke liye ye zaroori hai *@
    <partial name="_ValidationScriptsPartial" />
}
