@model Student_Performance_Management_System.ViewModel.PerformanceCard

@{
    ViewData["Title"] = "Performance Card";
    Layout = "_StaffLayout";   // change if you use Admin/Staff layout
}

<div class="container mt-4">

    <!-- Student Details -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="mb-3">Student Performance Card</h4>

            <div class="row">
                <div class="col-md-4">
                    <strong>PRN:</strong><br />
                    @Model.StudentPRN
                </div>
                <div class="col-md-4">
                    <strong>Name:</strong><br />
                    @Model.StudentName
                </div>
                <div class="col-md-4">
                    <strong>Course:</strong><br />
                    @Model.CourseName
                </div><div class="col-md-4">
                    <strong>Rank:</strong><br />
                    @Model.Rank
                </div>
            </div>
        </div>
    </div>
    @{
        int sr = 1;
        int total = 0;
        int scored = 0;
    }
    <!-- Marks Table -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-bordered table-hover text-center align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th class="text-start">Subject</th>
                        <th>Theory</th>
                        <th>Lab</th>
                        <th>Internal</th>
                        <th>Max Marks</th>
                        <th>Total</th>
                        <th>Failed In</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    

                    @foreach (var item in Model.Subjects)
                    {
                        total = total + item.MaxMarks;
                        scored = scored + item.Total;

                        <tr>
                            <td>@sr</td>
                            <td class="text-start">@item.SubjectName</td>
                            <td>@item.Theory</td>
                            <td>@item.Lab</td>
                            <td>@item.Internal</td>
                            <td>@item.MaxMarks</td>
                            <td class="fw-bold">@item.Total</td>
                            @if (@item.FailedIn == "P")
                            {
                                <td class="fw-bold text-success">@item.FailedIn
                                </td>
                            }
                            else {
                                <td class="fw-bold text-danger">@item.FailedIn</td>
                            }
                            <td>
                                @if (@item.Status)
                                {
                                    <span class="badge bg-success">Pass</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Fail</span>
                                }
                            </td>
                        </tr>
                        sr++;
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Summary -->
    <div class="card shadow-sm mt-4">
        <div class="card-body text-end ">
            <h6>Score</h6>
            <strong> @scored / @total</strong>
        </div>
    </div>

</div>
