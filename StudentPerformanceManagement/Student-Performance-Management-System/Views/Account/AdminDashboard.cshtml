@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
}

<div class="row g-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white border-0 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center p-4">
                <div>
                    <h6 class="mb-1 text-white-50">Total Courses</h6>
                    <h2 class="fw-bold mb-0">12</h2>
                </div>
                <i class="bi bi-book fs-1 opacity-50"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white border-0 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center p-4">
                <div>
                    <h6 class="mb-1 text-white-50">Total Students</h6>
                    <h2 class="fw-bold mb-0">540</h2>
                </div>
                <i class="bi bi-people fs-1 opacity-50"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-warning text-dark border-0 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center p-4">
                <div>
                    <h6 class="mb-1 text-black-50">Total Subjects</h6>
                    <h2 class="fw-bold mb-0">48</h2>
                </div>
                <i class="bi bi-journal-text fs-1 opacity-50"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-danger text-white border-0 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center p-4">
                <div>
                    <h6 class="mb-1 text-white-50">Tasks Assigned</h6>
                    <h2 class="fw-bold mb-0">96</h2>
                </div>
                <i class="bi bi-list-task fs-1 opacity-50"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white border-0 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center p-4">
                <div>
                    <h6 class="mb-1 text-white-50">Tasks Assigned</h6>
                    <h2 class="fw-bold mb-0">96</h2>
                </div>
                <i class="bi bi-list-task fs-1 opacity-50"></i>
            </div>
        </div>
    </div>
</div>