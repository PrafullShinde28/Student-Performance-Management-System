@model Student_Performance_Management_System.ViewModel.DashboardViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
}

<div class="row g-4">

    <!-- Total Students -->
    <div class="col-md-3">
        <div class="card bg-success text-white border-0 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center p-4">
                <div>
                    <h6 class="mb-1 text-white-50">Total Students</h6>
                    <h2 class="fw-bold mb-0">@Model.TotalStudent</h2>
                </div>
                <i class="bi bi-people fs-1 opacity-50"></i>
            </div>
        </div>
    </div>

    <!-- Total Staff -->
    <div class="col-md-3">
        <div class="card bg-info text-white border-0 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center p-4">
                <div>
                    <h6 class="mb-1 text-white-50">Total Staff</h6>
                    <h2 class="fw-bold mb-0">@Model.TotalStaff</h2>
                </div>
                <i class="bi bi-person-badge fs-1 opacity-50"></i>
            </div>
        </div>
    </div>

    <!-- Total Courses -->
    <div class="col-md-3">
        <div class="card bg-primary text-white border-0 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center p-4">
                <div>
                    <h6 class="mb-1 text-white-50">Total Courses</h6>
                    <h2 class="fw-bold mb-0">@Model.TotalCourses</h2>
                </div>
                <i class="bi bi-book fs-1 opacity-50"></i>
            </div>
        </div>
    </div>

    <!-- Total Course Groups -->
    <div class="col-md-3">
        <div class="card bg-danger text-white border-0 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center p-4">
                <div>
                    <h6 class="mb-1 text-white-50">Total Course Groups</h6>
                    <h2 class="fw-bold mb-0">@Model.TotalGroups</h2>
                </div>
                <i class="bi bi-list-task fs-1 opacity-50"></i>
            </div>
        </div>
    </div>

    <!-- Total Subjects -->
    <div class="col-md-3">
        <div class="card bg-warning text-dark border-0 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center p-4">
                <div>
                    <h6 class="mb-1 text-black-50">Total Subjects</h6>
                    <h2 class="fw-bold mb-0">@Model.TotalSubjects</h2>
                </div>
                <i class="bi bi-journal-text fs-1 opacity-50"></i>
            </div>
        </div>
    </div>

    <!-- Total Tasks -->
    <div class="col-md-3">
        <div class="card bg-danger text-white border-0 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center p-4">
                <div>
                    <h6 class="mb-1 text-white-50">Total Tasks Assigned</h6>
                    <h2 class="fw-bold mb-0">@Model.TotalTasks</h2>
                </div>
                <i class="bi bi-list-task fs-1 opacity-50"></i>
            </div>
        </div>
    </div>

</div>
