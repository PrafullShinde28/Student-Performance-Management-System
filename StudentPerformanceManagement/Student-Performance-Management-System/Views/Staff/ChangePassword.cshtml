@model Student_Performance_Management_System.ViewModel.StaffChangePasswordViewModel
@{
    Layout = "_StaffLayout";
}
<!-- SUCCESS MESSAGE -->
@if (TempData["Success"] != null)
{
    <div class="position-fixed top-50 start-50 translate-middle z-3">
        <div class="alert alert-success shadow-lg text-center px-4 py-3 rounded-3">
            @TempData["Success"]
        </div>
    </div>
}

<!-- ERROR MESSAGE -->
@if (TempData["Error"] != null)
{
    <div class="position-fixed top-50 start-50 translate-middle z-3">
        <div class="alert alert-danger shadow-lg text-center px-4 py-3 rounded-3">
            @TempData["Error"]
        </div>
    </div>
}
<div class="container mt-5">
   
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-white py-3 border-0">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-shield-lock me-2 text-primary"></i>
                        Security Settings
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form asp-controller="Staff"
                          asp-action="UpdatePassword"
                          method="post">

                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Current Password</label>
                            <input asp-for="CurrentPassword"
                                   class="form-control"
                                   placeholder="Enter current password" />
                            <span asp-validation-for="CurrentPassword"
                                  class="text-danger small"></span>
                        </div>

                        <hr class="text-muted opacity-25" />

                        <div class="mb-3">
                            <label class="form-label fw-semibold">New Password</label>
                            <input asp-for="NewPassword"
                                   class="form-control"
                                   placeholder="Create strong password" />
                            <span asp-validation-for="NewPassword"
                                  class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                Confirm New Password
                            </label>
                            <input asp-for="ConfirmPassword"
                                   class="form-control"
                                   placeholder="Repeat new password" />
                            <span asp-validation-for="ConfirmPassword"
                                  class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit"
                                    class="btn btn-primary py-2 fw-bold">
                                Update Password
                            </button>

                            <a asp-action="EditProfile"
                               class="btn btn-link text-muted text-decoration-none small">
                                Back to Profile
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
