@model List<Student_Performance_Management_System.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
    Layout = "_AdminLayout";
}

<div class="container-fluid">

    @* Popup Alerts *@
    @if (TempData["DeleteError"] != null)
    {
        <script>
            alert("@TempData["DeleteError"]");
        </script>
    }

    @if (TempData["DeleteSuccess"] != null)
    {
        <script>
            alert("@TempData["DeleteSuccess"]");
        </script>
    }

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-semibold">Subjects</h4>

        <a class="btn btn-primary" href="/Admin/AddSubjects">
            <i class="bi bi-plus-circle"></i> Add Subject
        </a>
    </div>

    <!-- Subjects Table -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Subject Name</th>
                        <th>Course Name</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int sr = 1;
                        foreach (var s in Model)
                        {
                            <tr>
                                <td>@sr</td>
                                <td>@s.SubjectName</td>
                                <td>@s.Course?.CourseName</td>
                                <td class="text-center">

                                    <a asp-action="EditSubjects"
                                       asp-route-id="@s.SubjectId"
                                       class="btn btn-sm btn-outline-warning me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <form asp-action="DeleteSubjects"
                                          asp-route-id="@s.SubjectId"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Delete this subject?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>

                                </td>
                            </tr>
                            sr++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                No subjects found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
