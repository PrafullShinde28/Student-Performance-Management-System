@model IEnumerable<Student_Performance_Management_System.Models.CourseGroup>

@{
    ViewData["Title"] = "Course Groups";
    Layout = "_AdminLayout";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-semibold">Course Groups</h4>

        <a asp-action="AddCourseGroup" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Course Group
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Group Name</th>
                        <th>Course</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        int sr = 1;
                    }

                    @foreach (var group in Model)
                    {
                        <tr>
                            <td>@sr</td>
                            <td>@group.GroupName</td>
                            <td>@group.Course.CourseName</td>

                            <td class="text-center">
                                <a asp-action="EditCourseGroup"
                                   asp-route-id="@group.CourseGroupId"
                                   class="btn btn-sm btn-outline-warning me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <form asp-action="DeleteCourseGroup"
                                      asp-route-id="@group.CourseGroupId"
                                      method="post"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Are you sure you want to delete this group?');">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        sr++;
                    }

                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                No course groups available.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
