@model Student_Performance_Management_System.ViewModel.StudentEnrollmentViewModel

@{
    ViewData["Title"] = "Enroll Student";
    Layout = "_AdminLayout";
}

<div class="container-fluid">

    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-semibold text-primary">
            <i class="bi bi-person-plus"></i> Enroll Student
        </h4>

        <a asp-action="Students" asp-controller="Admin" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <!-- FORM CARD -->
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-sm rounded-4">
                <div class="card-body p-4">

                    <form asp-action="EnrollStudent" method="post" enctype="multipart/form-data">

                        <!-- NAME -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- EMAIL -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- MOBILE -->
                        <div class="mb-3">
                            <label asp-for="MobileNo" class="form-label"></label>
                            <input asp-for="MobileNo" class="form-control" />
                            <span asp-validation-for="MobileNo" class="text-danger small"></span>
                        </div>

                        <!-- COURSE -->
                        <div class="mb-3">
                            <label asp-for="CourseId" class="form-label"></label>
                            <select asp-for="CourseId"
                                    asp-items="Model.Courses"
                                    class="form-select"
                                    id="courseDropdown">
                                <option value="">-- Select Course --</option>
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger small"></span>
                        </div>

                        <!-- COURSE GROUP -->
                        <div class="mb-3">
                            <label asp-for="CourseGroupId" class="form-label"></label>
                            <select asp-for="CourseGroupId"
                                    class="form-select"
                                    id="groupDropdown">
                                <option value="">-- Select Course Group --</option>
                            </select>
                            <span asp-validation-for="CourseGroupId" class="text-danger small"></span>
                        </div>

                        <!-- PROFILE IMAGE -->
                        <div class="mb-3">
                            <label asp-for="ProfileImage" class="form-label"></label>
                            <input asp-for="ProfileImage" type="file" class="form-control" />
                            <span asp-validation-for="ProfileImage" class="text-danger small"></span>
                        </div>

                        <!-- SUBMIT -->
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-person-plus"></i> Enroll
                            </button>
                        </div>

                    </form>

                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p class="text-danger small">@error.ErrorMessage</p>
                    }

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {

            $('#courseDropdown').change(function () {

                var courseId = $(this).val();
                var groupDropdown = $('#groupDropdown');

                groupDropdown.empty();
                groupDropdown.append('<option value="">Loading...</option>');

                if (!courseId) {
                    groupDropdown.empty();
                    groupDropdown.append('<option value="">-- Select Course Group --</option>');
                    return;
                }

                $.ajax({
                    url: '/Admin/GetGroupsByCourseId',
                    type: 'GET',
                    data: { courseId: courseId },
                    success: function (data) {

                        groupDropdown.empty();
                        groupDropdown.append('<option value="">-- Select Course Group --</option>');

                        if (data.length === 0) {
                            groupDropdown.append('<option value="">No groups found</option>');
                        }

                        $.each(data, function (i, item) {
                            groupDropdown.append(
                                `<option value="${item.id}">${item.name}</option>`
                            );
                        });
                    },
                    error: function () {
                        alert('Error loading course groups');
                    }
                });
            });
        });
    </script>
}
