@model List<Student_Performance_Management_System.Models.Student>

@{
    ViewData["Title"] = "Students";
    Layout = "_AdminLayout";
}

<div class="container-fluid">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-semibold">Students</h4>

        <a asp-action="EnrollStudent" asp-controller="Admin" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Student
        </a>
    </div>

    <!-- Students Table -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>PRN</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Course</th>
                        <th>Group</th>
                        <th>Mobile</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int srNo = 1;

                        foreach (var student in Model)
                        {
                            <tr>
                                <td>@srNo</td>
                                <td>@student.PRN</td>
                                <td>@student.Name</td>
                                <td>@student.Email</td>
                                <td>@(student.Course?.CourseName ?? "N/A")</td>
                                <td>@(student.CourseGroup?.GroupName ?? "N/A")</td>
                                <td>@student.MobileNo</td>
                                <td class="text-center">

                                    <!-- Edit Button -->
                                    <a asp-action="EditStudent"
                                       asp-controller="Admin"
                                       asp-route-id="@student.StudentId"
                                       class="btn btn-sm btn-outline-warning me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <!-- Delete Button -->
                                    <form asp-action="DeleteStudent"
                                          asp-controller="Admin"
                                          asp-route-id="@student.StudentId"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this student?');">

                                        @Html.AntiForgeryToken()

                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>

                                </td>
                            </tr>

                            srNo++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                No students found.
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
