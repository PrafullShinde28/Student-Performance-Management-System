@model Student_Performance_Management_System.ViewModel.EditStudentViewModel

@{
    ViewData["Title"] = "Edit Student";
    Layout = "_AdminLayout";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-semibold text-primary">
            <i class="bi bi-pencil-square"></i> Edit Student
        </h4>

        <a asp-action="Students" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-4">

                    <form asp-action="EditStudent" method="post">
                        @Html.AntiForgeryToken()

                        <input asp-for="StudentId" type="hidden" />
                        <input asp-for="AppUserId" type="hidden" />

                        <!-- PRN -->
                        <div class="mb-3">
                            <label asp-for="PRN" class="form-label fw-semibold"></label>
                            <input asp-for="PRN" class="form-control" readonly />
                        </div>

                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>

                        <!-- Mobile -->
                        <div class="mb-3">
                            <label asp-for="MobileNo" class="form-label fw-semibold"></label>
                            <input asp-for="MobileNo" class="form-control" />
                            <span asp-validation-for="MobileNo" class="text-danger small"></span>
                        </div>

                        <!-- Course -->
                        <div class="mb-3">
                            <label asp-for="CourseId" class="form-label fw-semibold"></label>
                            <select asp-for="CourseId"
                                    asp-items="Model.Courses"
                                    class="form-select"
                                    id="courseDropdown">
                                <option value="">-- Select Course --</option>
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger small"></span>
                        </div>

                        <!-- Course Group -->
                        <div class="mb-4">
                            <label asp-for="CourseGroupId" class="form-label fw-semibold"></label>
                            <select asp-for="CourseGroupId"
                                    asp-items="Model.CourseGroups"
                                    class="form-select"
                                    id="groupDropdown">
                                <option value="">-- Select Course Group --</option>
                            </select>
                            <span asp-validation-for="CourseGroupId" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save"></i> Update
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $('#courseDropdown').change(function () {

            var courseId = $(this).val();
            var groupDropdown = $('#groupDropdown');

            groupDropdown.empty().append('<option>Loading...</option>');

            if (!courseId) {
                groupDropdown.html('<option value="">-- Select Course Group --</option>');
                return;
            }

            $.get('/Admin/GetGroupsByCourseId', { courseId: courseId }, function (data) {

                groupDropdown.empty().append('<option value="">-- Select Course Group --</option>');

                if (data.length === 0) {
                    groupDropdown.append('<option>No groups found</option>');
                }

                $.each(data, function (i, item) {
                    groupDropdown.append(`<option value="${item.id}">${item.name}</option>`);
                });
            });
        });
    </script>
}
