@model IEnumerable<Student_Performance_Management_System.Models.Staff>

@{
    ViewData["Title"] = "Staff";
    Layout = "_AdminLayout";
}

<div class="container-fluid">

    <!-- SUCCESS MESSAGE -->
    @if (TempData["Success"] != null)
    {
        <div class="position-fixed top-50 start-50 translate-middle z-3">
            <div class="alert alert-success shadow text-center px-4 py-3 rounded-3">
                @TempData["Success"]
            </div>
        </div>
    }

    <!-- ERROR MESSAGE -->
    @if (TempData["Error"] != null)
    {
        <div class="position-fixed top-50 start-50 translate-middle z-3">
            <div class="alert alert-danger shadow text-center px-4 py-3 rounded-3">
                @TempData["Error"]
            </div>
        </div>
    }

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-semibold">Staff</h4>

        <a asp-action="AddStaff" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Staff
        </a>
    </div>

    <!-- Staff Table -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Mobile</th>
                        <th class="text-center">Tasks</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        int sr = 1;
                    }

                    @foreach (var staff in Model)
                    {
                        <tr>
                            <td>@sr</td>
                            <td>@staff.Name</td>
                            <td>@staff.Email</td>
                            <td>@staff.MobileNo</td>

                            <!-- VIEW TASK -->
                            <td class="text-center">
                                <a asp-action="ViewStaffTasks"
                                   asp-route-id="@staff.StaffId"
                                   class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>

                            <!-- ACTIONS -->
                            <td class="text-center">
                                <a asp-action="EditStaff"
                                   asp-route-id="@staff.StaffId"
                                   class="btn btn-sm btn-outline-warning me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <!-- DELETE BUTTON -->
                                <button type="button"
                                        class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteStaffModal"
                                        data-staffid="@staff.StaffId"
                                        data-staffname="@staff.Name">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                        sr++;
                    }

                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No staff records found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

<!-- DELETE STAFF MODAL -->
<div class="modal fade" id="deleteStaffModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">

            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                </h5>
                <button type="button"
                        class="btn-close btn-close-white"
                        data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body text-center">
                <p>Are you sure you want to delete</p>
                <h6 class="fw-bold text-danger" id="staffNameText"></h6>
            </div>

            <div class="modal-footer justify-content-center">
                <form asp-action="DeleteStaff" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteStaffId" />
                    <button type="submit"
                            class="btn btn-danger px-4">
                        Delete
                    </button>
                    <button type="button"
                            class="btn btn-outline-secondary px-4"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>

                   
                </form>
            </div>

        </div>
    </div>
</div>

<script>
    var modal = document.getElementById('deleteStaffModal');

    modal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        document.getElementById('deleteStaffId').value = button.getAttribute('data-staffid');
        document.getElementById('staffNameText').innerText = button.getAttribute('data-staffname');
    });

    setTimeout(() => {
        document.querySelectorAll('.alert').forEach(a => a.remove());
    }, 3000);
</script>
