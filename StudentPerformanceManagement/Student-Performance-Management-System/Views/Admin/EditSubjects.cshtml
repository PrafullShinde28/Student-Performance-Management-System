@model Student_Performance_Management_System.ViewModel.SubjectCreateVM
@{
    ViewData["Title"] = "Edit Subject";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6">

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white border-bottom-0 pb-2">
                    <h6 class="fw-semibold text-warning mb-0">
                        <i class="bi bi-pencil-square me-1"></i> Edit Subject
                    </h6>
                </div>

                <div class="card-body p-3">
                    <form asp-action="EditSubjects" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@ViewBag.SubjectId" />

                        <div class="mb-3">
                            <label class="form-label small fw-semibold">Subject Name</label>
                            <input asp-for="SubjectName"
                                   class="form-control form-control-sm"
                                   placeholder="Enter subject name" />
                            <span asp-validation-for="SubjectName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-semibold">Course</label>
                            <select asp-for="CourseId"
                                    asp-items="Model.CourseList"
                                    class="form-select form-select-sm">
                                <option value="">-- Select Course --</option>
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a asp-action="Subjects" class="btn btn-outline-secondary btn-sm px-3">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-warning btn-sm px-3">
                                <i class="bi bi-save me-1"></i> Update
                            </button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>
