@model Student_Performance_Management_System.Models.Staff

@{
    ViewData["Title"] = "Add Staff";
    Layout = "_AdminLayout";
}

<div class="container-fluid">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-semibold text-primary">
            <i class="bi bi-person-badge"></i> Add Staff
        </h4>

        <a asp-action="Staff" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <!-- Card -->
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-4">

                    <form asp-action="AddStaff" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Mobile -->
                        <div class="mb-4">
                            <label asp-for="MobileNo" class="form-label fw-semibold"></label>
                            <input asp-for="MobileNo" class="form-control" />
                            <span asp-validation-for="MobileNo" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProfileImage" class="form-label"></label>
                            <input asp-for="ProfileImage" type="file" class="form-control" />
                            <span asp-validation-for="ProfileImage" class="text-danger"></span>
                        </div>

                        <!-- Password Info -->
                        <div class="alert alert-secondary small">
                            Password will be auto-generated as:
                            <strong>EmpId@Sunbeam</strong>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-person-plus"></i> Add Staff
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
