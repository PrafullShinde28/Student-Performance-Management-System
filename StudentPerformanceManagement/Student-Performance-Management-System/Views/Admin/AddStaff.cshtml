@{
    ViewData["Title"] = "Add Staff";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0 fw-semibold text-primary">
                        <i class="bi bi-person-badge"></i> Enroll Staff
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form method="post">

                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Name</label>
                            <input type="text" name="name" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Email</label>
                            <input type="email" name="email" class="form-control" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Mobile Number</label>
                            <input type="text" name="mobileNo" class="form-control" required />
                        </div>

                        <div class="alert alert-secondary small">
                            Password will be auto-generated as:
                            <strong>EmpId@Sunbeam</strong>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-person-plus"></i> Enroll
                            </button>
                        </div>
                    </form>

                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div class="alert alert-danger py-1 px-2 mt-2 small">
                            @error.ErrorMessage
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
