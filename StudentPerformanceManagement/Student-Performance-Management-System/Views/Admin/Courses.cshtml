@model IEnumerable<Student_Performance_Management_System.Models.Course>

@{
    ViewData["Title"] = "Courses";
    Layout = "_AdminLayout";
}

<div class="container-fluid">

    <!-- SUCCESS MESSAGE -->
    @if (TempData["Success"] != null)
    {
        <div class="position-fixed top-50 start-50 translate-middle z-3">
            <div class="alert alert-success shadow-lg text-center px-4 py-3 rounded-3">
                @TempData["Success"]
            </div>
        </div>
    }

    <!-- ERROR MESSAGE -->
    @if (TempData["Error"] != null)
    {
        <div class="position-fixed top-50 start-50 translate-middle z-3">
            <div class="alert alert-danger shadow-lg text-center px-4 py-3 rounded-3">
                @TempData["Error"]
            </div>
        </div>
    }

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-semibold">Courses</h4>

        <a asp-action="AddCourse" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Course
        </a>
    </div>

    <!-- Courses Table -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Course Name</th>
                        <th>Description</th>
                        <th>Duration</th>
                        <th>Fees</th>
                        <th class="text-center">Students Enrolled</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        int sr = 1;
                    }

                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@sr</td>
                            <td>@course.CourseName</td>
                            <td>@course.Description</td>
                            <td>@course.Duration</td>
                            <td>₹@course.Fees</td>

                            <td class="text-center">
                                <a asp-controller="Admin"
                                   asp-action="CourseStudents"
                                   asp-route-id="@course.CourseId"
                                   class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-people"></i> View
                                </a>
                            </td>

                            <td class="text-center">

                                <!-- EDIT -->
                                <a asp-controller="Admin"
                                   asp-action="EditCourse"
                                   asp-route-id="@course.CourseId"
                                   class="btn btn-sm btn-outline-warning me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <!-- DELETE (MODAL TRIGGER) -->
                                <button type="button"
                                        class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteConfirmModal"
                                        data-course-id="@course.CourseId">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>

                        sr++;
                    }

                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                No courses available.
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<!-- DELETE CONFIRMATION MODAL -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title text-white">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body text-center">
                <p class="mb-1">
                    Are you sure you want to delete this course?
                </p>
                @* <small class="text-muted">
                    This action cannot be undone.
                </small> *@
            </div>

            <div class="modal-footer justify-content-center">
                <form id="deleteCourseForm" method="post">
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-danger px-4">
                        Yes, Delete
                    </button>

                    <button type="button"
                            class="btn btn-secondary px-4"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>

<!-- SCRIPT -->
<script>
    // auto-hide messages
    setTimeout(() => {
        document.querySelectorAll('.alert').forEach(a => a.remove());
    }, 3000);

    // pass course id to delete form
    var deleteModal = document.getElementById('deleteConfirmModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var courseId = button.getAttribute('data-course-id');

        var form = document.getElementById('deleteCourseForm');
        form.action = '/Admin/DeleteCourse/' + courseId;
    });
</script>
