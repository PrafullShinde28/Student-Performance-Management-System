@model Student_Performance_Management_System.ViewModel.SubjectWiseReportVM
@{
    ViewData["Title"] = "Subject Wise Report";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
@if (TempData["NoMarks"] != null)
{
        <script>
            alert("@TempData["NoMarks"]");
        </script>
}


    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-semibold text-primary">
            <i class="bi bi-bar-chart-fill me-2"></i>Subject Wise Student Marks
        </h4>
    </div>

    <!-- Filter Card -->
    <div class="card shadow-sm mb-4 border-0 rounded-4">
        <div class="card-body">
            <form asp-action="SubjectWiseReport" method="post" class="row g-3 align-items-end">

                <div class="col-md-4">
                    <label class="form-label fw-semibold">Course</label>
                    <select asp-for="CourseId" asp-items="Model.Courses"
                            id="CourseId" class="form-select">
                        <option value="">-- Select Course --</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-semibold">Subject</label>
                    <select id="SubjectId" name="SubjectId" class="form-select">
                        <option value="">-- Select Subject --</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Show Report
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Result Table -->
@if (Model.ReportRows != null && Model.ReportRows.Any())
{
        <div class="card shadow border-0 rounded-4">
            <div class="card-body">

                <div class="table-responsive">
                    <table class="table table-hover align-middle text-center">
                        <thead class="table-light">
                            <tr>
                                <th>Rank</th>
                                <th>PRN</th>
                                <th>Student Name</th>
                                <th>Theory</th>
                                <th>Lab</th>
                                <th>Internal</th>
                                <th>Total</th>
                                <th>Obtained</th>
                                <th>Failed In</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ReportRows)
                            {
                                <tr class="@(item.ResultStatus == "Fail" ? "table-danger" : "")">
                                    <td class="fw-bold">@item.Rank</td>
                                    <td>@item.PRN</td>
                                    <td>@item.StudentName</td>
                                    <td>@item.TheoryMarks</td>
                                    <td>@item.LabMarks</td>
                                    <td>@item.InternalMarks</td>
                                    <td>@item.TotalMarks</td>
                                    <td class="fw-semibold">@item.ObtainedMarks</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.FailedIn))
                                        {
                                            <span class="badge bg-danger">@item.FailedIn</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">–</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(item.ResultStatus == "Pass" ? "bg-success" : "bg-danger") px-3 py-2">
                                            @item.ResultStatus
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
}


@section Scripts {
        <script>
            window.addEventListener("load", function () {

                console.log("JS Loaded");

                var course = document.getElementById("CourseId");
                if (!course) return;

                course.addEventListener("change", function () {

                    var courseId = this.value;
                    var subject = document.getElementById("SubjectId");

                    subject.innerHTML = '<option value="">-- Select Subject --</option>';

                    if (courseId) {
                        fetch('/Admin/GetSubjectByCourse?courseId=' + courseId)
                            .then(res => res.json())
                            .then(data => {
                                data.forEach(v => {
                                    subject.innerHTML += `<option value="${v.subjectId}">${v.subjectName}</option>`;
                                });
                            });
                    }
                });
            });
        </script>
}


