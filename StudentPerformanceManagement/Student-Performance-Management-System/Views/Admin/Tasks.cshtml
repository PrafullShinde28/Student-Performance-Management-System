@model IEnumerable<Student_Performance_Management_System.Models.Tasks>
@{
    ViewData["Title"] = "Tasks";
    Layout = "_AdminLayout";
}

<div class="container-fluid">

    <!-- Success / Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="position-fixed top-50 start-50 translate-middle z-3">
            <div class="alert alert-success shadow text-center px-4 py-3 rounded">
                @TempData["Success"]
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="position-fixed top-50 start-50 translate-middle z-3">
            <div class="alert alert-danger shadow text-center px-4 py-3 rounded">
                @TempData["Error"]
            </div>
        </div>
    }

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-semibold">
            <i class="bi bi-list-task text-primary"></i> Tasks
        </h4>

        <a asp-action="AddTask" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Task
        </a>
    </div>

    <!-- Table -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Staff</th>
                        <th>Course</th>
                        <th>Group</th>
                        <th>Subject</th>
                        <th>Valid To</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.Title</td>
                            <td>@t.Staff.Name</td>
                            <td>@t.Course.CourseName</td>
                            <td>@t.CourseGroup.GroupName</td>
                            <td>@t.Subject.SubjectName</td>
                            <td>@t.ValidTo.ToString("dd MMM yyyy")</td>

                            <td class="text-center">
                                <a asp-action="EditTask"
                                   asp-route-id="@t.TasksId"
                                   class="btn btn-sm btn-outline-warning me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <button class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteTaskModal"
                                        data-id="@t.TasksId">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }

                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                No tasks found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteTaskModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title text-danger">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body text-center">
                Are you sure you want to delete this task?
            </div>

            <div class="modal-footer justify-content-center">
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const modal = document.getElementById('deleteTaskModal');
        modal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            document.getElementById('deleteForm').action = `/Admin/DeleteTask/${id}`;
        });

        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(a => a.remove());
        }, 3000);
    </script>
}
