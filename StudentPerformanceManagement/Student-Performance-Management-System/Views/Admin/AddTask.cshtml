@model Student_Performance_Management_System.ViewModel.AddTasksViewModel;

@{
    ViewData["Title"] = "AddTask";
    Layout = "_AdminLayout";
}

<h1>AddTask</h1>

<h4>Tasks</h4>
<hr />
<div class="row" justify-content-center">
    <div class="col-md-4 ">
        <form asp-action="AddTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" name="Title" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" name="Description" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Staff</label>
                <select asp-for="StaffId"
                        asp-items="Model.Staffs"
                        class="form-control">
                    <option value="">-- Select Staff --</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Course</label>
                <select asp-for="CourseId"
                        asp-items="Model.Courses"
                        class="form-control">
                    <option value="">-- Select Course --</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Course Group</label>
                <select asp-for="CourseGroupId"
                        asp-items="Model.CourseGroups"
                        class="form-control">
                    <option value="">-- Select Course Group --</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Subject</label>
                <select asp-for="SubjectId"
                        asp-items="Model.Subjects"
                        class="form-control">
                    <option value="">-- Select Subject --</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Valid From</label>
                <input type="date" name="ValidFrom" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Valid To</label>
                <input type="date" name="ValidTo" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

